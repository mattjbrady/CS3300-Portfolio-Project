<p id="notice"><%= notice %></p>

<div class="container">
  <div class="page-header">
    <h1>Projects</h1>
    <h4><span class="label label-primary">Lorem ipsum </span></h4>
  </div>
</div>

<div class="container">
  <table class="table table-striped">
    <thead>
      <tr class="w-50">
        <th>Title</th>
        <th class="w-25">Description</th>
        <th>Actions</th>
      </tr>
    </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr class="w-50">
        <td><%= project.title %></td>
        <td class="w-50"><%= project.description %></td>
        <td class = "text-left">
          <%= link_to 'Show', project, class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_project_path(project), class: 'btn btn-success'  %>
          <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<div class="container">
<%= link_to 'New Project', new_project_path, class: 'btn btn-success'  %>
</div>
